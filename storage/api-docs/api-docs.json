                        "example": "Полное содержание статьи..."
                    },
                    "image_path": {
                        "title": "Image Path",
                        "description": "Путь к изображению статьи",
                        "type": "string",
                        "example": "articles/image.jpg"
                    },
                    "status": {
                        "title": "Status",
                        "description": "Статус статьи",
                        "type": "string",
                        "enum": [
                            "draft",
                            "published"
                        ],
                        "example": "published"
                    },
                    "user_id": {
                        "title": "Author ID",
                        "description": "ID автора статьи",
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "created_at": {
                        "title": "Created at",
                        "description": "Дата создания",
