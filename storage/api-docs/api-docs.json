                "required": [
                    "title",
                    "content"
                ],
                "properties": {
                    "title": {
                        "title": "Title",
                        "description": "Заголовок статьи",
                        "type": "string",
                        "example": "Введение в Laravel"
                    },
                    "content": {
                        "title": "Content",
                        "description": "Содержание статьи",
                        "type": "string",
                        "example": "Полное содержание статьи..."
                    },
                    "image": {
                        "title": "Image",
                        "description": "Изображение статьи",
