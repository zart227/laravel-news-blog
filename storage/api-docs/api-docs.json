                        "format": "binary"
                    },
                    "status": {
                        "title": "Status",
                        "description": "Статус статьи",
                        "type": "string",
                        "enum": [
                            "draft",
                            "published"
                        ],
                        "example": "draft"
                    },
                    "tags": {
                        "title": "Tags",
                        "description": "ID тегов",
                        "type": "array",
                        "items": {
