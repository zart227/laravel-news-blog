                    },
                    "updated_at": {
                        "title": "Updated at",
                        "description": "Дата обновления",
                        "type": "string",
                        "format": "datetime",
                        "example": "2024-01-01 12:00:00"
                    },
                    "user": {
                        "$ref": "#/components/schemas/User"
                    },
                    "tags": {
                        "title": "Tags",
                        "description": "Теги статьи",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Tag"
                        }
                    }
                },
                "type": "object",
                "xml": {
                    "name": "Article"
                }
            },
            "Tag": {
                "title": "Tag",
                "description": "Модель тега",
                "properties": {
                    "id": {
                        "title": "ID",
                        "description": "ID тега",
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "name": {
                        "title": "Name",
                        "description": "Название тега",
