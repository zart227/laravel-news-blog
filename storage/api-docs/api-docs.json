                    "created_at": {
                        "title": "Created at",
                        "description": "Дата создания",
                        "type": "string",
                        "format": "datetime",
                        "example": "2024-01-01 12:00:00"
                    },
                    "updated_at": {
                        "title": "Updated at",
                        "description": "Дата обновления",
                        "type": "string",
                        "format": "datetime",
                        "example": "2024-01-01 12:00:00"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "Tag"
                }
            },
